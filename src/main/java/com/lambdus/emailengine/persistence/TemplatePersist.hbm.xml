<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
 
                <class name="com.lambdus.emailengine.persistence.TemplatePersist" table="templates">
 
                                <id name="id" column="id">
                                                <generator class="native" />
                                </id>
                                
                                <property name="domain">
                                                <column name="domain" length="255" not-null="true" />
                                </property>                                
 
                                <property name="creative">
                                                <column name="creative" length="255" not-null="true" />
                                </property>
 
                                <property name="subjectline">
                                                <column name="subjectline" length="255" not-null="true" />
                                </property>
 
                                <property name="fromaddress">
                                                <column name="fromaddress" length="255" not-null="true" />
                                </property>
                                
                                <property name="fromname">
                                                <column name="fromname" length="255" not-null="true" />
                                </property>
                               
                </class>
</hibernate-mapping>